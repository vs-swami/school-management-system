{
  "kind": "collectionType",
  "collectionName": "bus_stops",
  "info": {
    "singularName": "bus-stop",
    "pluralName": "bus-stops",
    "displayName": "Bus Stop"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "stop_name": {
      "type": "string",
      "required": true
    },
    "coordinates": {
      "type": "json",
      "description": "GPS coordinates {lat: number, lng: number}"
    },
    "location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location",
      "inversedBy": "bus_stops",
      "description": "Reference to Location entity"
    },
    "notes": {
      "type": "text",
      "description": "Additional information about this stop"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "bus_routes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::bus-route.bus-route",
      "mappedBy": "bus_stops"
    },
    "pickup_allocations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::seat-allocation.seat-allocation",
      "mappedBy": "pickup_stop"
    },
    "fee_assignments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::fee-assignment.fee-assignment",
      "mappedBy": "bus_stop"
    }
  }
}
