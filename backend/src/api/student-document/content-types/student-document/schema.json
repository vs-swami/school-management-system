{
  "kind": "collectionType",
  "collectionName": "student_documents",
  "info": {
    "singularName": "student-document",
    "pluralName": "student-documents",
    "displayName": "Student Document"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "file": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images", "files"]
    },
    "document_type": {
      "type": "enumeration",
      "enum": ["student_photo", "guardian_photo", "birth_certificate", "aadhaar_card", "other"],
      "required": true
    },
    "ocr_json": {
      "type": "json"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "uploaded_by": {
      "type": "string"
    },
    "uploaded_at": {
      "type": "datetime"
    },
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::student.student",
      "inversedBy": "documents"
    },
    "guardian": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::guardian.guardian",
      "inversedBy": "documents"
    }
  }
}