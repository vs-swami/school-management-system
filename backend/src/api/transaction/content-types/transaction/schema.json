{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction",
    "description": "Unified transaction table for all payments and expenses"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "transaction_number": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "transaction_type": {
      "type": "enumeration",
      "enum": ["income", "expense", "transfer", "refund"],
      "required": true
    },
    "transaction_category": {
      "type": "enumeration",
      "enum": [
        "student_fee",
        "transport_fee",
        "lab_fee",
        "exam_fee",
        "wallet_topup",
        "wallet_deduction",
        "maintenance",
        "salary",
        "utilities",
        "supplies",
        "other"
      ],
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "INR",
      "required": true
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "cash",
        "cheque",
        "bank_transfer",
        "upi",
        "credit_card",
        "debit_card",
        "wallet",
        "online"
      ],
      "required": true
    },
    "transaction_date": {
      "type": "datetime",
      "required": true
    },
    "reference_number": {
      "type": "string"
    },
    "bank_reference": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed", "cancelled", "refunded"],
      "default": "pending",
      "required": true
    },
    "payment_items": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::payment-item.payment-item",
      "mappedBy": "transactions"
    },
    "expense_payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::expense-payment.expense-payment",
      "mappedBy": "transaction"
    },
    "wallet_transaction": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wallet-transaction.wallet-transaction",
      "mappedBy": "transaction"
    },
    "payer_name": {
      "type": "string"
    },
    "payer_contact": {
      "type": "string"
    },
    "receipt_number": {
      "type": "string"
    },
    "processed_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user"
    },
    "notes": {
      "type": "text"
    },
    "metadata": {
      "type": "json"
    }
  }
}