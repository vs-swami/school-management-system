{
  "kind": "collectionType",
  "collectionName": "guardians",
  "info": {
    "singularName": "guardian",
    "pluralName": "guardians",
    "displayName": "Guardian"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::student.student",
      "inversedBy": "guardians"
    },
    "full_name": {
      "type": "string",
      "required": true
    },
    "relation": {
      "type": "enumeration",
      "enum": ["father", "mother", "guardian"],
      "required": true
    },
    "source": {
      "type": "string",
      "default": "system"
    },
    "primary_contact": {
      "type": "boolean",
      "default": false
    },
    "occupation": {
      "type": "string"
    },
    "documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::student-document.student-document",
      "mappedBy": "guardian"
    },
    "contact_numbers": {
      "type": "component",
      "repeatable": true,
      "component": "common.contact",
      "max": 4,
      "description": "Guardian contact numbers (mobile, whatsapp, emergency, etc.)"
    },
    "addresses": {
      "type": "component",
      "repeatable": true,
      "component": "common.address",
      "max": 2,
      "description": "Guardian addresses"
    }
  }
}