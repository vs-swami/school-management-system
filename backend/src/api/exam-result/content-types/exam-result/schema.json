{
  "kind": "collectionType",
  "collectionName": "exam_results",
  "info": {
    "singularName": "exam-result",
    "pluralName": "exam-results",
    "displayName": "Exam Result",
    "description": "Stores exam results with multiple subject scores"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::student.student",
      "inversedBy": "exam_results"
    },
    "exam_type": {
      "type": "string",
      "required": true,
      "description": "Type of exam (e.g., Unit Test, Midterm, Final)"
    },
    "exam_name": {
      "type": "string",
      "description": "Specific exam name or identifier"
    },
    "exam_date": {
      "type": "date"
    },
    "subject_scores": {
      "type": "component",
      "repeatable": true,
      "component": "academic.subject-score",
      "description": "Detailed scores for multiple subjects"
    },
    "total_obtained": {
      "type": "decimal",
      "description": "Total marks obtained across all subjects"
    },
    "total_maximum": {
      "type": "decimal",
      "description": "Total maximum marks across all subjects"
    },
    "overall_percentage": {
      "type": "decimal",
      "description": "Overall percentage across all subjects"
    },
    "overall_grade": {
      "type": "string",
      "description": "Overall grade for the exam"
    },
    "rank": {
      "type": "integer",
      "description": "Student's rank in class for this exam"
    },
    "remarks": {
      "type": "text",
      "description": "Teacher's remarks or comments"
    },
    "academic_year": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::academic-year.academic-year"
    },
    "class": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::class.class"
    }
  }
}