{
  "kind": "collectionType",
  "collectionName": "vendors",
  "info": {
    "singularName": "vendor",
    "pluralName": "vendors",
    "displayName": "Vendor",
    "description": "Suppliers and service providers for the school"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "vendor_type": {
      "type": "enumeration",
      "enum": [
        "supplier",
        "contractor",
        "service_provider",
        "other"
      ],
      "required": true
    },
    "contact_person": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "inactive"],
      "default": "active",
      "required": true
    }
  }
}