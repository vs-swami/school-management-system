{
  "collectionName": "components_common_contacts",
  "info": {
    "displayName": "Contact",
    "icon": "phone",
    "description": "Reusable contact information component"
  },
  "attributes": {
    "contact_type": {
      "type": "enumeration",
      "enum": ["mobile", "landline", "whatsapp", "emergency"],
      "default": "mobile",
      "required": true
    },
    "number": {
      "type": "string",
      "required": true,
      "regex": "^[+]?[0-9]{10,15}$"
    },
    "is_primary": {
      "type": "boolean",
      "default": false
    },
    "is_whatsapp_enabled": {
      "type": "boolean",
      "default": false
    },
    "label": {
      "type": "string",
      "maxLength": 50,
      "description": "Optional label like 'Home', 'Work', 'Father Mobile'"
    }
  }
}