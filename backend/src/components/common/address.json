{
  "collectionName": "components_common_addresses",
  "info": {
    "displayName": "Address",
    "icon": "map-marker-alt",
    "description": "Reusable address component for students, guardians, and staff"
  },
  "attributes": {
    "address_type": {
      "type": "enumeration",
      "enum": ["current", "permanent", "postal", "office"],
      "default": "current",
      "required": true
    },
    "address_line1": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "address_line2": {
      "type": "string",
      "maxLength": 255
    },
    "city": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "state": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "pincode": {
      "type": "string",
      "required": true,
      "regex": "^[1-9][0-9]{5}$"
    },
    "landmark": {
      "type": "string",
      "maxLength": 255
    },
    "is_primary": {
      "type": "boolean",
      "default": false
    }
  }
}